<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ensta.missiontomars.App">
<!--    background="-fx-background-color: white"-->

    <padding><Insets bottom="10" left="2" right="25" top="0" /></padding>

    <MenuBar prefHeight="3.0" prefWidth="662.0">
        <Menu text="Configuration">
            <MenuItem onAction="#handleConfig1" text="U1 uniquement" />
            <MenuItem onAction="#handleConfig2" text="U2 uniquement" />
            <MenuItem onAction="#handleConfig3" text="U1 phase1 &amp; U2 phase2" />
            <MenuItem onAction="#handleConfig4" text="U1 phase2 &amp; U2 phase1" />
            <MenuItem onAction="#handleConfig5" text="Optimum" />
        </Menu>

    </MenuBar>
   <ImageView fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@mission_to_mars1.png" />
      </image>
   </ImageView>

    <Text fx:id="actiontarget" text="Choix de la configuration" />

    <Button fx:id="config1" onAction="#handleConfig1" text="U1 uniquement" />
    <Button fx:id="config2" onAction="#handleConfig2" text="U2 uniquement" />
    <Button fx:id="config3" onAction="#handleConfig3" text="U1 phase1 &amp; U2 phase2" />
    <Button fx:id="config4" onAction="#handleConfig4" text="U1 phase2 &amp; U2 phase1" />
    <Button fx:id="config5" onAction="#handleConfig5" text="Optimum" />
   <Label fx:id="resultText" />



</VBox>
